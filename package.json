{
  "name": "wordcamp-ogijima-2020",
  "version": "1.0.0",
  "description": "css file for wcogijima",
  "author": "WordCamp Ogijima 2020 team",
  "license": "GPL-2.0+",
  "scripts": {
    "css": "yarn build-css && yarn autoprefixer",
    "build-css": "node-sass --output-style expanded --indent-width 4 src/scss/style.scss src/css/style.css",
    "autoprefix": "npx postcss src/**/*.css --use autoprefixer -d src/ --no-map",
    "watch": "node-sass src/scss/ --output src/css/ -r -w --output-style expanded --indent-width 4 && yarn autoprefix"
  },
  "dependencies": {
    "@wordpress/browserslist-config": "^2.7.0",
    "autoprefixer": "^9.8.6",
    "chokidar-cli": "^2.1.0",
    "node-sass": "^4.14.1",
    "node-sass-import": "^2.0.1",
    "postcss": "^7.0.32",
    "postcss-cli": "^7.1.1"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ]
}

